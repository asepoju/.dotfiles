# vim: noexpandtab sw=8
[user]
	name = Hyeon Kim
	email = simnalamburt@gmail.com
	signingkey = 0F85F46EE242057F
[core]
	editor = vim
	pager = less -+XF -SQc
	excludesfile = ~/.gitexclude
	fscache = yes
	autocrlf = no
	quotepath = no
	precomposeunicode = yes
[log]
	date = iso8601
[color]
	ui = auto
[diff]
	renames = copies
	tool = vimdiff
[difftool]
	prompt = no
[fetch]
	prune = yes
[branch]
	autosetuprebase = always
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[credential "https://github.com"]
	username = simnalamburt
[credential "http://git.hyeon.me"]
	username = simnalamburt
[credential "http://git.upnl.org"]
	username = simnalamburt
[filter "lfs"]
	required = yes
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[include]
	path = ~/.gitconfig.local
[alias]
	g = "log --graph --pretty=\"format:%C(auto)%h%d %s%x1b[38;5;022m% GS%x1b[0m\""
[commit]
	gpgsign = yes
[rerere]
	enabled = yes
